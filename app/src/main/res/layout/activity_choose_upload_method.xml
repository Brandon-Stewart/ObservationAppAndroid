<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#CCFFFFFF"
    tools:context="ca.zhuoliupei.observationapp.ChooseUploadPhotoMethodActivity"
    android:weightSum="2"
    android:id="@+id/root_LL_ChooseUploadPhotoMethodActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/upload_from_galary"
            android:textColor="@color/black_overlay"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_galary"
            android:id="@+id/imgUploadFromGallary_ChooseUploadMethodActivity"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/take_a_photo_now"
            android:textColor="@color/black_overlay"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_camera_upload"
            android:id="@+id/imgTakeAPhoto_ChooseUploadMethodActivity"/>
    </LinearLayout>


</LinearLayout>
